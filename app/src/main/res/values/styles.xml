        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

    <style name="specific_rounded_corner_mini">
        <item name="cornerSizeTopLeft">27dp</item>
        <item name="cornerSizeBottomRight">27dp</item>
